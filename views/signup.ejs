<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <style></style>
  </head>
  <body>
    <h1>국밥이 여행하는 곳</h1>
    <div id="sign_up_page">
      <p>회원 가입</p>
      <p>Username: <input type="text" id="sign_up_username" /></p>
      <p>Nickname: <input type="text" id="sign_up_nickname" /></p>
      <p>ProfileImage: <input type="text" id="sign_up_profileImage" /></p>
      <p>Email: <input type="email" id="sign_up_email" /></p>
      <p>Age: <input type="text" id="sign_up_age" /></p>
      <p>Introduction: <input type="text" id="sign_up_Intro" /></p>
      <p>Password: <input type="text" id="sign_up_pw" /></p>
      <button type="button" class="btn btn-light" id="sign_in">
        회원 가입
      </button>
    </div>

    <script>
      // ejs 서버 측 문법으로 path 삽입해 줘야 함

      document.getElementById("sign_in").addEventListener("click", () => {
        const url = `http://localhost:6100/api/signup`;
        const username = document.getElementById("sign_up_username").value;
        const nickname = document.getElementById("sign_up_nickname").value;
        const profileImage = document.getElementById(
          "sign_up_profileImage"
        ).value;
        const email = document.getElementById("sign_up_email").value;
        const age = document.getElementById("sign_up_age").value;
        const introduction = document.getElementById("sign_up_Intro").value;
        const password = document.getElementById("sign_up_pw").value;

        const options = {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            username,
            nickname,
            profileImage,
            email,
            age,
            introduction,
            password,
          }),
        };
        fetch(url, options).then((response) => {
          try {
            if (response.ok === false) {
              throw new Error();
            }
            window.location.href = "./main";
          } catch (error) {
            console.error(error);
          }
        });
      });
    </script>
  </body>

  <script></script>
</html>
